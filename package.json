{
  "name": "drizzle-repository-generator",
  "version": "0.0.14",
  "description": "",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "dev": "pkgroll --clean-dist --sourcemap=inline --watch",
    "build": "pkgroll --clean-dist --minify",
    "db:migrate": "run-s db:migrate.*",
    "db:migrate.generate": "rimraf .cache/.migrations && drizzle-kit generate --config=./drizzle.config.ts",
    "db:migrate.push": "npx tsx ./src/mocks/migrate.ts && drizzle-kit push",
    "test": "vitest",
    "dev:test": "env-cmd run-s db:migrate test",
    "whiteboard": "pnpm tsx ./whiteboard.ts"
  },
  "devDependencies": {
    "@binochoi/eslint-config-typescript": "^0.0.25",
    "@types/pg": "^8.11.8",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^6.21.0",
    "drizzle-kit": "0.22.8",
    "drizzle-orm": "^0.31.2",
    "env-cmd": "^10.1.0",
    "eslint": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.12.0",
    "pkgroll": "^2.4.2",
    "rimraf": "^6.0.1",
    "vitest": "^2.0.5"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "keywords": [],
  "dependencies": {
    "type-fest": "^4.26.0"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.31.2"
  }
}